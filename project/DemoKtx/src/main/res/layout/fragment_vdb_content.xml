<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="image"
            type="android.graphics.drawable.Drawable" />

        <variable
            name="content"
            type="java.lang.String" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/vid_fvdb_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:fitsSystemWindows="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/vid_fvdb_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/un_dp_100"
                android:layout_height="@dimen/un_dp_100"
                android:layout_gravity="center"
                android:background="@{image}"
                tools:background="@mipmap/icon_launcher_round" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="@dimen/un_dp_10"
                android:text="@{content}"
                android:textSize="@dimen/un_sp_14"
                tools:text="随机内容" />

            <!-- 嵌套测试 parentFragment -->

            <FrameLayout
                android:id="@+id/vid_fvdb_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_height="@dimen/un_dp_200" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>