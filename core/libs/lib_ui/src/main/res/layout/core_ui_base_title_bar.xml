<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vid_cubtb_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/un_dp_50">

    <LinearLayout
        android:id="@+id/vid_cubtb_left_linear"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <dev.core.lib.ui.widget.BaseImageView
            android:layout_width="@dimen/un_dp_50"
            android:layout_height="@dimen/un_dp_50"
            android:padding="@dimen/un_dp_5"
            android:scaleType="fitXY"
            android:src="@mipmap/op_arrow_left_black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vid_cubtb_title_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toRightOf="@id/vid_cubtb_left_linear"
        app:layout_constraintRight_toLeftOf="@id/vid_cubtb_right_linear">

        <dev.core.lib.ui.widget.BaseTextView
            android:id="@+id/vid_cubtb_title_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/un_sp_25"
            tools:text="Title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vid_cubtb_right_linear"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/red"
        tools:layout_width="@dimen/un_dp_50">

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>