<?xml version="1.0" encoding="utf-8"?>
<dev.widget.custom.CustomNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        style="@style/AppTheme.padding_lr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <dev.base.widget.BaseButton
            android:id="@+id/vid_aw_save_btn"
            style="@style/AppTheme.Base_Button"
            android:text="保存壁纸" />

        <dev.base.widget.BaseImageView
            android:id="@+id/vid_aw_igview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/un_dp_10"
            android:scaleType="fitXY" />
    </LinearLayout>
</dev.widget.custom.CustomNestedScrollView>