<?xml version="1.0" encoding="utf-8"?>
<dev.widget.custom.CustomNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/vid_act_linear"
            style="@style/AppTheme.padding_lr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/un_dp_20"
            android:layout_marginBottom="@dimen/un_dp_10"
            android:orientation="vertical" />

        <include
            android:id="@+id/vid_base_recy"
            layout="@layout/base_view_recyclerview" />
    </LinearLayout>
</dev.widget.custom.CustomNestedScrollView>