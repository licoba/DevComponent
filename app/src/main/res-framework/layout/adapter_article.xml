<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="@color/color_f5">

    <androidx.cardview.widget.CardView
        android:id="@+id/vid_aa_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/un_dp_10"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:stateListAnimator="@drawable/touch"
        app:cardCornerRadius="@dimen/un_dp_5"
        app:cardElevation="@dimen/un_dp_5"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/un_dp_70"
            android:layout_margin="@dimen/un_dp_10">

            <FrameLayout
                android:id="@+id/vid_aa_pic_frame"
                android:layout_width="@dimen/un_dp_70"
                android:layout_height="@dimen/un_dp_70"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_border_image"
                android:padding="@dimen/un_dp_5">

                <dev.base.widget.BaseImageView
                    android:id="@+id/vid_aa_pic_igview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/un_dp_8"
                android:layout_toRightOf="@id/vid_aa_pic_frame"
                android:orientation="vertical">

                <dev.base.widget.BaseTextView
                    android:id="@+id/vid_aa_title_tv"
                    style="@style/AppTheme.Base_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/un_sp_16"
                    tools:text="标题" />

                <dev.base.widget.BaseTextView
                    android:id="@+id/vid_aa_time_tv"
                    style="@style/AppTheme.Base_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:textColor="@color/red"
                    android:textSize="@dimen/un_sp_15"
                    tools:text="时间" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>