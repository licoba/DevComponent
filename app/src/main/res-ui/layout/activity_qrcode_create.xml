<?xml version="1.0" encoding="utf-8"?>
<dev.widget.custom.CustomNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        style="@style/AppTheme.padding_lr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <dev.base.widget.BaseButton
            android:id="@+id/vid_aqc_create_btn"
            style="@style/AppTheme.Base_Button"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="生成二维码" />

        <dev.base.widget.BaseButton
            android:id="@+id/vid_aqc_select_btn"
            style="@style/AppTheme.Base_Button"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="选择 Logo 图片" />

        <dev.base.widget.BaseEditText
            android:id="@+id/vid_aqc_content_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/un_dp_150"
            android:layout_marginTop="@dimen/un_dp_10"
            android:background="@color/white"
            android:gravity="left|top"
            android:hint="最多输入120个字作为生成二维码内容"
            android:inputType="textMultiLine"
            android:maxLength="120"
            android:maxLines="6"
            android:padding="@dimen/un_dp_10"
            android:textSize="@dimen/un_sp_15" />

        <dev.base.widget.BaseImageView
            android:id="@+id/vid_aqc_igview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/un_dp_10" />
    </LinearLayout>
</dev.widget.custom.CustomNestedScrollView>