<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/activity_shapeable_image_view" />

    <View
        android:id="@+id/vid_abs_bg_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_tran40"
        android:visibility="gone"
        tools:visibility="visible" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/vid_abs_sheet_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:behavior_hideable="true"
            app:behavior_peekHeight="@dimen/un_dp_60"
            app:layout_behavior="@string/bottom_sheet_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_blue_top_r10"
                android:orientation="vertical">

                <dev.base.widget.BaseTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/un_dp_60"
                    android:background="@drawable/shape_bg_black_top_r10"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="ShapeableImageView"
                    android:textColor="@color/white"
                    android:textSize="@dimen/un_sp_28" />

                <include layout="@layout/activity_shapeable_image_view" />
            </LinearLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</FrameLayout>