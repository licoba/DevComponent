<?xml version="1.0" encoding="utf-8"?>
<dev.widget.custom.CustomNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <dev.base.widget.BaseTextView
            android:id="@+id/vid_al_tv"
            style="@style/AppTheme.Base_TextView"
            android:layout_height="@dimen/un_dp_100"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/un_dp_5" />

        <View
            style="@style/AppTheme.Base_Line_Vertical"
            android:background="@color/gray" />

        <dev.widget.function.LineTextView
            android:id="@+id/vid_al_content_tv"
            style="@style/AppTheme.Base_TextView"
            android:layout_margin="@dimen/un_dp_15"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/un_dp_5" />

    </LinearLayout>
</dev.widget.custom.CustomNestedScrollView>