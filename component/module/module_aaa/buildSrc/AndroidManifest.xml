<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="afkt.module.aaa">

    <!--
        android:name="dev.core.app.AppContext"
    -->

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="false"
        android:icon="@mipmap/core_ui_icon_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/core_ui_icon_launcher_round"
        android:theme="@style/AppTheme"
        tools:replace="android:label, android:allowBackup, android:icon, android:roundIcon">

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">

            <meta-data
                android:name="afkt.module.aaa.AAAInitializer"
                android:value="@string/androidx_startup" />
        </provider>

        <!-- LAUNCHER -->

        <activity android:name=".activity.LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>